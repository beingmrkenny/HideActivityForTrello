{
    "manifest_version" : 2,

    "name": "Hide Activity Details for Trello",
    "description": "Hides all the activity details on Trello cards, leaving comments visible",
    "homepage_url": "http://beingmrkenny.co.uk/web-extensions/hide-activity-trello",
    "author" : "Mark Kenny",

    "version": "2.0",

    "icons": {
		"16": "Icons/192.png",
		"32": "Icons/192.png",
		"48": "Icons/192.png",
		"64": "Icons/192.png",
		"256": "Icons/256.png"
	},

    "content_scripts": [
        {
            "js": [ "script.js" ],
            "matches": [ "*://trello.com/*" ],
            "run_at": "document_start"
        }
    ]

}
